---
const teamsResponse = await fetch("http://localhost:1234/teams");
const teamsData = await teamsResponse.json();
interface TeamBadge {
  id: string;
  name: string;
  badge: string;
}
---

<footer
  class={`flex flex-row items-center sm:justify-between p-4 mt-10 w-full overflow-x-auto border-t-[1px] border-mainblack`}
  style="background-color: white;"
>
  {
    teamsData.map((teambadge: TeamBadge) => (
      <a
        href={`/teams/${teambadge.id}`}
        class="inline-block hover:scale-105 transition"
      >
        <img
          src={teambadge.badge}
          alt={teambadge.name}
          class="min-h-[40px] min-w-[40px] max-w-[40px] max-h-[40px]"
        />
      </a>
    ))
  }
</footer>
